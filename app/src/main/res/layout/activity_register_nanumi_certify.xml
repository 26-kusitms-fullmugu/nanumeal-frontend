<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterNanumiCertifyActivity">

    <!-- 상단 바 -->
    <LinearLayout
        android:id="@+id/register_certify_select_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/register_certify_select_ex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#DCDCDC"
            android:textSize="13sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/register_certify_select_next_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건너뛰기"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/font_black"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_certify_select_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나누미는 인증 절차가 필요해요"
            android:textSize="22sp"
            android:textColor="@color/font_black"
            android:fontFamily="@font/notosans_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:textColor="@color/font_gray"
            android:fontFamily="@font/roboto_regular"
            android:text="꿈나무 카드 뒷면의 카드 번호가 보이게 사진을 찍어주세요."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/font_gray"
            android:fontFamily="@font/roboto_regular"
            android:text="승인되기까지 최대 n일이 소요될 수 있습니다."/>

        <ImageView
            android:id="@+id/register_nanumi_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_nanumi_register_certify_select"
            android:layout_marginTop="66dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:text="1. 카드는 어두운 바닥에 두고"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/font_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="가이드에 맞춰 촬영해주세요."
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/font_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2. 반사광을 최소화하고 정보가 잘 보이게 해주세요."
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/font_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="3. 훼손이 심한 카드는 거절될 수 있습니다."
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/font_gray"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/register_certify_select_btn_camera"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_red_login"
        android:src="@drawable/texticon_camera_nanumi_certify_select"
        android:layout_marginTop="662dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageButton
        android:id="@+id/register_certify_select_btn_album"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/texticon_album_nanumi_certify_select"
        android:background="@drawable/btn_red_login"
        android:layout_marginTop="10dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintTop_toBottomOf="@id/register_certify_select_btn_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


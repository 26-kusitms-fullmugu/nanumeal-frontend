<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA3915"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_icon_nanumi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_nanumi"
        android:layout_marginTop="93dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/login_background_white"
        android:layout_width="match_parent"
        android:layout_height="2000px"
        android:layout_marginTop="108px"
        android:src="@drawable/background_white_login"
        app:layout_constraintTop_toBottomOf="@id/login_icon_nanumi"/>

    <TextView
        android:id="@+id/login_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#DA3915"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_background_white"/>


    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/btn_red_login"
        android:text="로그인"
        android:layout_marginTop="261dp"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        app:layout_constraintTop_toTopOf="@id/login_background_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/login_idpw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_background_white">

        <EditText
            android:id="@+id/Login_email_et"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/btn_idpw_btn"
            android:hint="  E-mail"
            android:textSize="14sp"
            android:maxLength="20"
            android:maxLines="1"
            android:drawableStart="@drawable/icon_email_login"
            android:paddingStart="10dp"
            android:paddingEnd="12.17dp"
            android:textColorHint="@color/main_red" />

        <EditText
            android:id="@+id/Login_pw_et"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/btn_idpw_btn"
            android:hint="  password"
            android:textSize="14sp"
            android:maxLength="20"
            android:maxLines="1"
            android:inputType="textPassword"
            android:drawableStart="@drawable/icon_pw_login"
            android:paddingStart="10dp"
            android:textColorHint="@color/main_red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="89px"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="#C4C4C4"
                android:shadowColor="#c4c4c4"
                android:text="자동 로그인"
                android:textColor="#C4C4C4"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="#c4c4c4" />

            <TextView
                android:id="@+id/login_find_idpw_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="아이디 찾기"
                android:textColor="#c4c4c4" />

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="#c4c4c4" />

            <TextView
                android:id="@+id/login_find_idpw_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="비밀번호 찾기"
                android:textColor="#c4c4c4" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F3F3F3"
            android:layout_marginTop="264px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="92px"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/login_sns_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_sns_elipse"/>

            <ImageView
                android:id="@+id/login_sns_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/login_sns_elipse"/>

            <ImageView
                android:id="@+id/login_sns_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/login_sns_elipse"/>

            <ImageView
                android:id="@+id/login_sns_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/login_sns_elipse"/>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
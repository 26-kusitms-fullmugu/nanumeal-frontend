<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA3915"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_icon_nanumi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_nanumi"
        android:layout_marginTop="93dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/login_background_white"
        android:layout_width="match_parent"
        android:layout_height="2000px"
        android:layout_marginTop="108px"
        android:src="@drawable/background_white_login"
        app:layout_constraintTop_toBottomOf="@id/login_icon_nanumi"/>

    <ImageView
        android:id="@+id/login_background_red"
        android:layout_width="match_parent"
        android:layout_height="2000px"
        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        android:layout_marginTop="108px"
        android:src="@drawable/background_red_login"
        app:layout_constraintTop_toBottomOf="@id/login_icon_nanumi"/>

    <TextView
        android:id="@+id/login_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#DA3915"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_background_white"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/btn_red_login"
        android:text="로그인"
        android:layout_marginTop="261dp"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        app:layout_constraintTop_toTopOf="@id/login_background_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_background_red">


    </LinearLayout>













</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterNanumiInfoInput2Activity">

    <LinearLayout
        android:id="@+id/nanumer_info_Input2_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/nanumer_info_Input2_ex_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#DCDCDC"
        android:textSize="13sp"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/nanumer_info_Input2_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/status_bar_info_input2"
        android:layout_marginTop="87dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/nanumer_info_Input2_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nanumer_info_Input2_status_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/font_black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_bold"/>

        <EditText
            android:id="@+id/nanumer_info_input2_name_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_nanumer_info_input"
            android:hint="이름"
            android:paddingStart="15dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:inputType="text"
            android:textColor="@color/font_gray"
            android:fontFamily="@font/roboto_regular"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/nanumer_info_input_nick_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nanumer_info_Input2_name_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/font_black"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nanumer_info_input_nick_et"
                android:layout_width="265dp"
                android:layout_height="35dp"
                android:hint="닉네임"
                android:paddingStart="15dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/btn_nanumer_info_input"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/font_gray"/>

            <Button
                android:id="@+id/nanumer_info_input_nick_certify_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:text="중복확인"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:background="@drawable/btn_nanumer_info_input2_nick" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="13dp"
            android:text="나누밀에선 오로지 닉네임으로만 활동할 수 있어요! "
            android:textSize="11sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/font_gray"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F9FAF9"
        android:layout_marginTop="351dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/nanumer_info_Input2_ex_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택 사항"
        android:textSize="15sp"
        android:textColor="@color/font_black"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="384dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:id="@+id/nanumer_info_Input2_age_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nanumer_info_Input2_ex_tv2">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"
            android:textColor="@color/font_black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nanumer_info_Input2_age_et"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:maxLength="3"
                android:inputType="number"
                android:maxLines="1"
                android:background="@drawable/btn_nanumer_info_input"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="살"
                android:textSize="13sp"
                android:textColor="@color/font_gray"
                android:fontFamily="@font/roboto_regular"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/nanumer_info_Input2_LoveAdd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nanumer_info_Input2_age_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심 지역"
            android:textColor="@color/font_black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_bold"/>

        <EditText
            android:id="@+id/nanumer_info_Input2_LoveAdd_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_nanumer_info_input"
            android:hint="    관심 지역을 찾아 추가해보세요."
            android:textSize="13sp"
            android:textColor="@color/font_gray"
            android:fontFamily="@font/roboto_regular"/>
        
    </LinearLayout>
    
    
    <Button
        android:id="@+id/nanumer_info_Input2_signIn_btn"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/btn_nanumer_info_input2_signin"
        android:layout_marginTop="111dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="가입하기"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toTopOf="@id/nanumer_info_Input2_LoveAdd_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
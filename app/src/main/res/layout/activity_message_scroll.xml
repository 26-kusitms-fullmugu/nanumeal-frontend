<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageScrollActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/map_background3"/>

    <LinearLayout
        android:id="@+id/message_scroll_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/message_scroll_linear2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/message_scroll_linear2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/message_scroll_btn1"
            android:layout_width="100dp"
            android:layout_height="41dp"
            android:background="@drawable/btn_message_scroll_gray"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="13sp"
            android:textColor="#DCDCDC"
            android:text="나중에"/>
        
        <Button
            android:id="@+id/message_scroll_btn2"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/btn_message_scroll_red"
            android:text="감사메시지 남기러가기"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_bold"/>

        <Button
            android:id="@+id/message_scroll_btn3"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/btn_message_scroll_red"
            android:text="감사메시지 남기기"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_bold"/>



        
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
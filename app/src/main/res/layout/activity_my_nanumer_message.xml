<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAF9"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".MyNanumerMessageActivity">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/my_nanumer_message_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="감사메시지"
                android:textSize="13sp"
                android:paddingBottom="13dp"
                android:textColor="@color/font_black"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"/>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/my_nanumer_message_layout2"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_my_history_listview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_nanumer_message_layout1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/my_nanumer_history_message_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11/21 (월)"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#DCDCDC"
                    android:textSize="13sp"
                    android:drawableEnd="@drawable/vector_right_light_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_my_history_listview"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/my_nanumer_message_layout2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/topbar_message_scroll"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감사메시지"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/font_black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="fill"
                    android:src="@drawable/my_nanumer_message_circle5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/main_red"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosans_bold"/>

                <TextView
                    android:id="@+id/my_nanumer_message_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textSize="18sp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/main_red"
                    android:fontFamily="@font/notosans_bold"/>







            </LinearLayout>

        </LinearLayout>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>